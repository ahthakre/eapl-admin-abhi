<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/food_name"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/editFoodDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/food_details"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/cost"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editEstimatedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/estimated_time_minutes"
        android:autofillHints="" />

    <Button
        android:id="@+id/btnAddFoodItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_food_item" />

</LinearLayout>